<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".actividades.ComprobacionReserva">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="414dp"
        android:layout_height="846dp"
        android:background="#B3191B1D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout4"
            android:layout_width="422dp"
            android:layout_height="426dp"
            android:background="#D2F7F7F2"
            app:layout_constraintBottom_toTopOf="@+id/botonModificar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="-1dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="77dp"
                android:layout_height="117dp"
                android:fontFamily="@font/josefin_sans"
                android:text="5"
                android:textAlignment="center"
                android:textSize="96sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.014"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/josefin_sans"
                android:text="RESERVÁTULUGAR"
                android:textAlignment="center"
                android:textColor="#B3191B1D"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/parrafo_explicativo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.296"
                app:layout_constraintStart_toEndOf="@+id/signoExclamación" />

            <TextView
                android:id="@+id/signoExclamación"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="144dp"
                android:fontFamily="@font/josefin_sans"
                android:text="!"
                android:textColor="#D65E69"
                android:textSize="66sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.244"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/parrafo_explicativo"
                android:layout_width="285dp"
                android:layout_height="81dp"
                android:fontFamily="@font/archivo_regular"
                android:text="Para completar el proceso deberás cargar tu número de comprobante y aceptar nuestros términos y condiciones"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/signoExclamación"
                tools:layout_editor_absoluteY="220dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:text="Acepto los términos y condiciones"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_turno_comprobante"
                android:layout_width="223dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:ems="10"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.628"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parrafo_explicativo"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btnNavSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3B3D40"
            app:itemIconTint="@drawable/selector"
            app:menu="@menu/menu_selector"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="767dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botonModificar"
            android:layout_width="283dp"
            android:layout_height="65dp"
            android:backgroundTint="#191B1D"
            android:fontFamily="@font/josefin_sans"
            android:text="MODIFICAR"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="446dp">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botonParaConfirmarReserva"
            android:layout_width="283dp"
            android:layout_height="65dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#F7F7F2"
            android:fontFamily="@font/josefin_sans"
            android:onClick="comprobacion_reserva"
            android:text="CONFIRMAR"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.534"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonModificar">

        </androidx.appcompat.widget.AppCompatButton>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="141dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="casi_todo"
            app:layout_constraintBottom_toTopOf="@+id/btnNavSelector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>