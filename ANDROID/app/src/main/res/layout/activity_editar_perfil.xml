<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoblanco"
    tools:context="com.example.virtualtrendsmobile.actividades.EditarPerfilActivity">

    <FrameLayout
        android:id="@+id/Frame"
        android:layout_width="423dp"
        android:layout_height="798dp"
        android:layout_marginTop="16dp"
        android:background="#CC191B1D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265">

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/barras" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="46dp"
        android:layout_height="17dp"
        android:layout_marginStart="83dp"
        android:text="correo"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_direccion" />

    <EditText
        android:id="@+id/input_direccion"
        android:layout_width="228dp"
        android:layout_height="41dp"
        android:layout_marginStart="83dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="176dp" />

    <EditText
        android:id="@+id/input_correo"
        android:layout_width="228dp"
        android:layout_height="41dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="93dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Frame"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="228dp"
        android:layout_height="41dp"
        android:layout_marginStart="83dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="66dp"
        android:layout_height="17dp"
        android:text="direcciÃ³n"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/input_direccion"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre"
        tools:layout_editor_absoluteX="83dp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/archivo_regular"
        android:text="EDITA TU CUENTA"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:text="nombre completo"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="62dp"
        android:layout_height="17dp"
        android:layout_marginStart="83dp"
        android:text="password"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_correo" />


    <EditText
        android:id="@+id/input_password"
        android:layout_width="228dp"
        android:layout_height="41dp"
        android:layout_marginStart="83dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/btnNavEditar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirmar"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="83dp"
        android:background="#191B1D"
        android:fontFamily="@font/archivo_regular"
        android:text="ENVIAR"
        android:textColor="#F3EAEA"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verturnos"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="83dp"
        android:background="#191B1D"
        android:fontFamily="@font/archivo_regular"
        android:text="VER TURNOS"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirmar" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_eliminar"
        android:layout_width="239dp"
        android:layout_height="40dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="83dp"
        android:background="#D3983B3B"
        android:fontFamily="@font/archivo_regular"
        android:text="ELIMINAR CUENTA"
        android:textColor="#fff"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_verturnos" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnNavEditar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#191B1D"
        app:itemIconTint="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_inicio" />

</androidx.constraintlayout.widget.ConstraintLayout>